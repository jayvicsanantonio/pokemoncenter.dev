---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'A collection of mini-apps and projects, Hoenn style!',
} = Astro.props;
const siteTitle = 'App Pok√©dex';
const fullTitle = `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{fullTitle}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />

    <style is:global>
      body {
        font-family: 'Inter', sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      .pokedex-title {
        font-family: 'Press Start 2P', cursive;
      }
      main::-webkit-scrollbar {
        width: 8px;
      }
      main::-webkit-scrollbar-track {
        background: #4a5568; /* gray-700 */
        border-radius: 4px;
      }
      main::-webkit-scrollbar-thumb {
        background: #a0aec0; /* gray-500 */
        border-radius: 4px;
      }
      main::-webkit-scrollbar-thumb:hover {
        background: #718096; /* gray-600 */
      }
    </style>
  </head>
  <body
    class="bg-gray-200 dark:bg-gray-900 min-h-screen flex items-center justify-center p-4 md:p-6"
  >
    <div
      class="grid grid-cols-1 md:grid-cols-[1fr_2.5fr_1fr] w-full max-w-6xl h-[70vh] min-h-[550px] md:h-[450px] shadow-xl rounded-xl overflow-hidden border border-gray-700 dark:border-gray-600"
    >
      <div
        class="bg-gradient-to-br from-red-600 to-red-700 p-6 flex items-center justify-center border-r border-gray-700 dark:border-gray-600 relative col-span-1 md:col-span-1"
      >
        <div
          class="absolute top-4 left-4 w-3.5 h-3.5 bg-green-400 rounded-full border border-gray-900/50"
        >
        </div>
        <div
          class="w-32 h-32 md:w-40 md:h-40 bg-slate-100 rounded-full flex items-center justify-center relative border border-gray-400 shadow-lg"
        >
          <div
            class="absolute left-1/2 top-0 bottom-0 w-px bg-gray-400 transform -translate-x-1/2"
          >
          </div>
          <div
            class="w-12 h-12 md:w-14 md:h-14 bg-blue-500 hover:bg-blue-400 transition-colors rounded-full border border-black/50 shadow-inner cursor-pointer"
          >
          </div>
        </div>
      </div>

      <div
        class="bg-gray-900 p-4 flex flex-col border-r border-gray-700 dark:border-gray-600 col-span-1 md:col-span-1"
      >
        <div
          class="bg-gray-800 p-1.5 rounded-lg flex-grow flex flex-col overflow-hidden"
        >
          <main
            class="flex-grow bg-slate-100 text-slate-900 p-4 md:p-6 rounded-md overflow-y-auto relative"
          >
            <header
              class="mb-4 text-center border-b border-slate-300 pb-2"
            >
              <a
                href="/"
                class="pokedex-title text-xl text-gray-700 hover:text-blue-600 transition-colors"
                style="text-shadow: 1px 1px #ccc;"
              >
                {siteTitle}
              </a>
              <nav class="mt-2 space-x-3">
                <a
                  href="/"
                  class="text-sm text-blue-700 hover:underline font-medium"
                  >Home</a
                >
              </nav>
            </header>
            <div class="space-y-6">
              <slot />
            </div>
            <footer
              class="text-center pt-3 mt-6 border-t border-slate-300"
            >
              <p class="text-xs text-gray-500">
                &copy; {new Date().getFullYear()}
                {siteTitle}.
              </p>
            </footer>
          </main>
        </div>
      </div>

      <div
        class="bg-gradient-to-bl from-red-600 to-red-700 p-6 flex flex-col justify-between items-center relative col-span-1 md:col-span-1"
      >
        <div class="flex gap-2.5 self-end mr-2 mt-1">
          <div
            class="w-5 h-5 bg-green-400 rounded-full border border-gray-900/50"
          >
          </div>
          <div
            class="w-5 h-5 bg-green-400 rounded-full border border-gray-900/50"
          >
          </div>
        </div>

        <div
          class="w-2/3 h-16 space-y-2 flex flex-col justify-center"
        >
          <div class="h-0.5 bg-gray-800/70 rounded-full"></div>
          <div class="h-0.5 bg-gray-800/70 rounded-full"></div>
          <div class="h-0.5 bg-gray-800/70 rounded-full"></div>
          <div class="h-0.5 bg-gray-800/70 rounded-full"></div>
        </div>

        <div class="h-8"></div>
      </div>
    </div>
  </body>
</html>
